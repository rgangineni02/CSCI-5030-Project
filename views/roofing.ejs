<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Roofing Services</title>
</head>
<body>
    <h1>Roofing Services</h1>

    
    <form action="/roofing" method="GET">
        <label for="location">Filter by Location:</label>
        <select name="location" id="location" onchange="this.form.submit()">
            <option value="">All Locations</option>
            <% locations.forEach(function(loc) { %>
                <option value="<%= loc %>" <%= selectedLocation === loc ? 'selected' : '' %>><%= loc %></option>
            <% }); %>
        </select>
    </form>
    <ul>
        <% roofs.forEach(function(roofvalue) { %>
            <li>
                <strong>Business Name:</strong> <%= roofvalue.ServiceName %><br>
                <strong>Email:</strong> <%= roofvalue.Email %><br>
                <strong>Contact:</strong> <%= roofvalue.Contact %><br>
                <strong>Availability:</strong> <%= roofvalue.Availability %><br>
                <strong>Location:</strong> <%= roofvalue.Location %><br>
                <strong>Rating:</strong> <%= roofvalue.Rating %>
            </li>
        <% }); %>
    </ul>
</body>
</html>
