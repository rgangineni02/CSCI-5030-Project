<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Painting Services</title>
</head>
<body>
    <h1>Painting Services</h1>

    <form action="/painting" method="GET">
        <label for="location">Filter by Location:</label>
        <select name="location" id="location" onchange="this.form.submit()">
            <option value="">All Locations</option>
            <% locations.forEach(function(loc) { %>
                <option value="<%= loc %>" <%= selectedLocation === loc ? 'selected' : '' %>><%= loc %></option>
            <% }); %>
        </select>
    </form>

    <ul>
        <% paintvalue.forEach(function(paint) { %>
            <li>
                <strong>Business Name:</strong> <%= paint.BusinessName %><br>
                <strong>Email:</strong> <%= paint.Email %><br>
                <strong>Contact:</strong> <%= paint.Contact %><br>
                <strong>Availability:</strong> <%= paint.Availability %><br>
                <strong>Location:</strong> <%= paint.Location %><br>
                <strong>Rating:</strong> <%= paint.rating %>
            </li>
        <% }); %>
    </ul>
</body>
</html>
